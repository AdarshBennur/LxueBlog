---
import '../styles/global.css';
import ProfileDropdown from '../components/ProfileDropdown.astro';

interface Props {
  title: string;
  description?: string;
  currentPage?: string;
}

const { title, description = "A luxurious blogging experience", currentPage } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | Luxe Blog</title>
  </head>
  <body>
    <header class="py-6 border-b border-sand">
      <div class="container-custom flex justify-between items-center">
        <a href="/" class="text-3xl md:text-4xl font-serif italic font-medium text-gold">Luxe<span class="text-charcoal">Blog</span></a>
        <div class="flex items-center space-x-8">
          <nav>
            <ul class="flex space-x-8">
              <li><a href="/home" class={`font-serif font-medium transition-colors ${currentPage === 'home' ? 'text-gold border-b-2 border-gold pb-1' : 'hover:text-gold'}`}>Home</a></li>
              <li><a href="/blog" class={`font-serif font-medium transition-colors ${currentPage === 'blog' ? 'text-gold border-b-2 border-gold pb-1' : 'hover:text-gold'}`}>Articles</a></li>
              <li><a href="/about" class={`font-serif font-medium transition-colors ${currentPage === 'about' ? 'text-gold border-b-2 border-gold pb-1' : 'hover:text-gold'}`}>About</a></li>
              <li><a href="/contact" class={`font-serif font-medium transition-colors ${currentPage === 'contact' ? 'text-gold border-b-2 border-gold pb-1' : 'hover:text-gold'}`}>Contact</a></li>
            </ul>
          </nav>
          <div class="flex items-center space-x-4 ml-8">
            <!-- Authentication State Container -->
            <div id="authContainer">
              <!-- Default: Show login/signup buttons -->
              <div id="authButtons" class="flex items-center space-x-4">
                <a href="/login" class={`text-sm font-serif font-medium transition-colors ${currentPage === 'login' ? 'text-gold border-b-2 border-gold pb-1' : 'hover:text-gold'}`}>Login</a>
                <a href="/signup" class="bg-gold hover:bg-gold/90 text-white px-4 py-1.5 rounded-sm text-sm font-serif font-medium transition-colors">Sign Up</a>
              </div>
              
              <!-- Show when authenticated: Profile dropdown -->
              <div id="profileContainer" class="hidden">
                <ProfileDropdown />
              </div>
            </div>
          </div>
        </div>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer class="py-12 bg-slate mt-16">
      <div class="container-custom">
        <div class="flex flex-wrap justify-between">
          <div class="w-full md:w-1/3 mb-8 md:mb-0">
            <h3 class="text-2xl font-serif italic mb-4 text-gold">Luxe<span class="text-charcoal">Blog</span></h3>
            <p class="max-w-xs">A luxury blogging platform showcasing elegant content with sophisticated style.</p>
          </div>
          <div class="w-full md:w-1/4 mb-8 md:mb-0">
            <h4 class="font-serif text-lg mb-4">Navigation</h4>
            <ul class="space-y-2">
              <li><a href="/home">Home</a></li>
              <li><a href="/blog">Articles</a></li>
              <li><a href="/about">About</a></li>
              <li><a href="/contact">Contact</a></li>
            </ul>
          </div>
          <div class="w-full md:w-1/3">
            <h4 class="font-serif text-lg mb-4">Subscribe</h4>
            <p class="mb-4">Join our newsletter to receive updates.</p>
            <div class="flex">
              <input 
                type="email" 
                placeholder="Your email address" 
                class="px-4 py-2 w-full border border-sand focus:border-gold focus:ring-0 bg-white rounded-l-sm"
              />
              <button class="btn bg-gold px-4 text-white rounded-r-sm">
                Subscribe
              </button>
            </div>
          </div>
        </div>
        <div class="divider"></div>
        <p class="text-center text-sm">Â© {new Date().getFullYear()} LuxeBlog. All rights reserved.</p>
      </div>
    </footer>

    <script>
      // Authentication state management
      document.addEventListener('DOMContentLoaded', function() {
        checkAuthenticationState();
      });

      function checkAuthenticationState() {
        const token = localStorage.getItem('token');
        const user = localStorage.getItem('user');
        const authButtons = document.getElementById('authButtons');
        const profileContainer = document.getElementById('profileContainer');
        
        if (token && user) {
          // User is authenticated - show profile dropdown
          if (authButtons) authButtons.classList.add('hidden');
          if (profileContainer) profileContainer.classList.remove('hidden');
        } else {
          // User is not authenticated - show login/signup buttons  
          if (authButtons) authButtons.classList.remove('hidden');
          if (profileContainer) profileContainer.classList.add('hidden');
        }
      }

      // Listen for authentication state changes
      window.addEventListener('storage', function(e) {
        if (e.key === 'token' || e.key === 'user') {
          checkAuthenticationState();
        }
      });

      // Global function to update auth state (can be called after login/signup)
      window.updateAuthState = function() {
        checkAuthenticationState();
      }
    </script>
  </body>
</html>
