---
import MainLayout from '../layouts/MainLayout.astro';
import FeaturedPost from '../components/FeaturedPost.astro';
import BlogCard from '../components/BlogCard.astro';

// Mock data for featured and recent posts
const featuredPost = {
  title: "The Art of Luxury Living",
  excerpt: "Discover the principles of luxurious living and how to incorporate them into your everyday life.",
  date: "March 20, 2025",
  author: "Sophia Laurent",
  image: "/images/featured-luxury.jpg",
  slug: "/blog/art-of-luxury-living"
};

const recentPosts = [
  {
    title: "Minimalist Luxury: Less is More",
    excerpt: "How embracing minimalism can actually enhance your luxury experience.",
    date: "March 18, 2025",
    author: "Alexander Grey",
    image: "/images/minimalist-luxury.jpg",
    category: "Lifestyle",
    slug: "/blog/minimalist-luxury"
  },
  {
    title: "The Perfect Morning Routine",
    excerpt: "Start your day with intention and elegance using this curated morning routine.",
    date: "March 15, 2025",
    author: "Emma Wilson",
    image: "/images/morning-routine.jpg",
    category: "Wellness",
    slug: "/blog/perfect-morning-routine"
  },
  {
    title: "Culinary Experiences Worth Traveling For",
    excerpt: "Extraordinary dining destinations that combine exceptional food with unforgettable atmospheres.",
    date: "March 10, 2025",
    author: "James Mitchell",
    image: "/images/culinary-experiences.jpg",
    category: "Travel",
    slug: "/blog/culinary-experiences"
  }
];
---

<MainLayout title="Home">
  <!-- Hero Section -->
  <section class="py-20 md:py-32 bg-rose">
    <div class="container-custom">
      <div class="max-w-2xl mx-auto text-center">
        <p class="serif-accent mb-3">Elegant Ideas & Inspiration</p>
        <h1 class="mb-6">Welcome to a World of Refined Elegance</h1>
        <p class="text-lg mb-8">Curated content that celebrates the art of sophisticated living, timeless design, and thoughtful perspectives.</p>
        <a href="/blog" class="btn btn-primary">Explore Articles</a>
      </div>
    </div>
  </section>

  <!-- Featured Post Section -->
  <section class="py-16">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="mb-3">Featured Article</h2>
        <div class="divider"></div>
      </div>
      <FeaturedPost post={featuredPost} />
    </div>
  </section>

  <!-- Recent Posts Section -->
  <section class="py-16 bg-slate bg-opacity-30">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="mb-3">Latest Articles</h2>
        <div class="divider"></div>
        <p class="max-w-2xl mx-auto">Discover our most recent explorations in lifestyle, design, travel, and wellness.</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {recentPosts.map(post => (
          <BlogCard post={post} />
        ))}
      </div>
      
      <div class="text-center mt-12">
        <a href="/blog" class="btn btn-secondary">View All Articles</a>
      </div>
    </div>
  </section>

  <!-- Newsletter Section -->
  <section class="py-16">
    <div class="container-custom max-w-4xl mx-auto">
      <div class="luxury-card p-12 text-center">
        <h2 class="mb-3">Join Our Newsletter</h2>
        <div class="divider"></div>
        <p class="mb-8">Subscribe to receive curated content delivered directly to your inbox.</p>
        <div class="flex flex-col md:flex-row max-w-md mx-auto">
          <input 
            type="email" 
            placeholder="Your email address" 
            class="px-4 py-3 w-full border border-sand focus:border-gold focus:ring-0 bg-white rounded-l-sm mb-4 md:mb-0"
          />
          <button class="btn bg-gold px-6 text-white rounded-r-sm md:ml-0">
            Subscribe
          </button>
        </div>
      </div>
    </div>
  </section>

  <!-- Categories Section -->
  <section class="py-16 bg-slate bg-opacity-30">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="mb-3">Explore Categories</h2>
        <div class="divider"></div>
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <a href="/blog/category/lifestyle" class="luxury-card p-8 text-center hover:scale-105">
          <h3 class="text-xl mb-2">Lifestyle</h3>
          <p class="text-mocha">Refined living</p>
        </a>
        <a href="/blog/category/travel" class="luxury-card p-8 text-center hover:scale-105">
          <h3 class="text-xl mb-2">Travel</h3>
          <p class="text-mocha">Elegant destinations</p>
        </a>
        <a href="/blog/category/wellness" class="luxury-card p-8 text-center hover:scale-105">
          <h3 class="text-xl mb-2">Wellness</h3>
          <p class="text-mocha">Balanced living</p>
        </a>
        <a href="/blog/category/design" class="luxury-card p-8 text-center hover:scale-105">
          <h3 class="text-xl mb-2">Design</h3>
          <p class="text-mocha">Timeless aesthetics</p>
        </a>
      </div>
    </div>
  </section>
</MainLayout>
