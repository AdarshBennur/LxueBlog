---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "A luxurious blogging experience" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | Luxe Blog</title>
  </head>
  <body>
    <header class="py-6 border-b border-sand">
      <div class="container-custom flex justify-between items-center">
        <a href="/" class="text-2xl font-serif italic font-medium text-gold">Luxe<span class="text-charcoal">Blog</span></a>
        <nav>
          <ul class="flex space-x-8">
            <li><a href="/home" class="font-medium">Home</a></li>
            <li><a href="/blog" class="font-medium">Articles</a></li>
            <li><a href="/about" class="font-medium">About</a></li>
            <li><a href="/contact" class="font-medium">Contact</a></li>
          </ul>
        </nav>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer class="py-12 bg-slate mt-16">
      <div class="container-custom">
        <div class="flex flex-wrap justify-between">
          <div class="w-full md:w-1/3 mb-8 md:mb-0">
            <h3 class="text-2xl font-serif italic mb-4 text-gold">Luxe<span class="text-charcoal">Blog</span></h3>
            <p class="max-w-xs">A luxury blogging platform showcasing elegant content with sophisticated style.</p>
          </div>
          <div class="w-full md:w-1/4 mb-8 md:mb-0">
            <h4 class="font-serif text-lg mb-4">Navigation</h4>
            <ul class="space-y-2">
              <li><a href="/home">Home</a></li>
              <li><a href="/blog">Articles</a></li>
              <li><a href="/about">About</a></li>
              <li><a href="/contact">Contact</a></li>
            </ul>
          </div>
          <div class="w-full md:w-1/3">
            <h4 class="font-serif text-lg mb-4">Subscribe</h4>
            <p class="mb-4">Join our newsletter to receive updates.</p>
            <div class="flex">
              <input 
                type="email" 
                placeholder="Your email address" 
                class="px-4 py-2 w-full border border-sand focus:border-gold focus:ring-0 bg-white rounded-l-sm"
              />
              <button class="btn bg-gold px-4 text-white rounded-r-sm">
                Subscribe
              </button>
            </div>
          </div>
        </div>
        <div class="divider"></div>
        <p class="text-center text-sm">Â© {new Date().getFullYear()} LuxeBlog. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>
